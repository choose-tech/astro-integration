---
import "../style.css";
import "@fontsource-variable/plus-jakarta-sans";
import "@fontsource-variable/jetbrains-mono";
import { ViewTransitions } from "astro:transitions";
import Sidebar from "./Sidebar/Sidebar.astro";
import Header from "./Header/Header.astro";
import options from "virtual:choose-tech/options";
import { getColors, hexToHsl } from "../utils/color-palette";
import Footer from "./Footer.astro";

const { title, description } = options;
const { origin, href } = Astro.url;
const ogImage = `${origin}/og.png`;

const colorPalette = getColors(options.color);
const injectedStyle = `
:root {
  ${Object.entries(colorPalette)
    .map(([k, v]) => {
      const hsl = hexToHsl(v);
      return `--primary-${k}: ${hsl[0]}deg ${hsl[1]}% ${hsl[2]}%;`;
    })
    .join("")}
}
`;
---

<html lang="en" class="h-full" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{`${title} | Choose Tech`}</title>
    <meta name="description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={href} />
    <script>
      import "iconify-icon";
      import _Alpine from "alpinejs";

      window.Alpine = _Alpine;
      _Alpine.start();
    </script>
    <ViewTransitions />
    <style set:html={injectedStyle}></style>
    {
      import.meta.env.PROD && (
        <script
          is:inline
          defer
          data-domain="choose-tech.com"
          data-api="/pl/api/event"
          src="/pl/js/script.js"
        />
      )
    }
  </head>
  <body
    class="flex min-h-full flex-col bg-gray-950 antialiased md:ml-[--sidebar-width]"
  >
    <div
      class="fixed inset-0 right-auto hidden w-[--sidebar-width] flex-col border-r border-gray-800 bg-gray-900 md:flex"
    >
      <Sidebar />
    </div>
    <Header />
    <main class="p-6">
      <slot />
    </main>
    <Footer />
  </body>
</html>
